alias ls='ls -G'
alias ll='ls -Al'
alias mkdir='mkdir -pv'
alias ..='cd ..'
alias sb='source ~/.bashrc'
alias ca='cat ~/.bash/aliases'

# git aliases
alias g='git'
alias glx='git log --graph --all --decorate --pretty=format:"%C(magenta)%h %C(blue)%ai %C(green)%an %C(cyan)%s %C(yellow bold)%d"'
alias gco='git checkout'
alias gcb='git checkout -b'
alias gcm='git checkout master'
alias gs='git status'
alias gf='git fetch -p'
alias gp='git pull'
alias gct='git add --all :/;git commit -am'
alias gps='git push'
alias grm='git rebase master'
alias grc='git rebase --continue'
alias gca='git commit --amend'
alias gcaf='git add .;git commit --amend --no-edit;git push -f'
alias gc-jks='git clone git@github.com:aedenj/javascript-kata-starter.git'
alias gc-gks='git clone git@github.com:aedenj/golang-kata-starter.git'
alias gc-sks='git clone git@github.com:aedenj/scala-kata-starter.git'

# scala
alias scalad='docker run -it --rm hseeberger/scala-sbt:8u222_1.3.5_2.13.1 scala'

# javascript
alias noded='docker run -it --rm node:latest node'
alias npmd='docker run -it --rm -v $(pwd):/app -w /app node:latest npm'

# spark
alias spark-shelld='docker run -it --rm -e ENABLE_INIT_DAEMON=false -w /spark -v "$PWD":/data bde2020/spark-master:2.4.4-hadoop2.7 bin/spark-shell'

#jupyter
alias jupyterd='f(){ docker run --rm -p $1:8888 -e JUPYTER_ENABLE_LAB=yes -e GRANT_SUDO=yes --user root -v "$PWD":/home/jovyan/work jupyter/datascience-notebook; unset -f f; }; f'

#terraform
alias terrad='docker run -it --rm --name terraform -v ~/.aws:/root/.aws -v $(pwd):/workspace -w /workspace -e TF_LOG=INFO hashicorp/terraform:light'
alias terrashell='docker run -it --rm --name terraform -v ~/.aws:/root/.aws -v $(pwd):/workspace -w /workspace --entrypoint /bin/sh hashicorp/terraform:light'

#aws
alias awsd='docker run --rm -it  -v ~/.aws:/root/.aws -v $(pwd):/aws --network aws-net amazon/aws-cli'
